@{
    Layout = "_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DemoAspNet.Models.Product




<h1 class="pb-3">Ajouter un produit</h1>

<form asp-action="AddProduct">
    @*Title*@
    <div class="form-group">
        <label class="form-label" asp-for="Title">Titre du produit</label>
        <input class="form-control" type="text" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    @*Price*@
    <div class="form-group">
        <label class="form-label" asp-for="Price">Prix</label>
        <input class="form-control" type="number" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    @*Country*@
    <div class="form-group">
        <label class="form-label" asp-for="Country">Pays d'origine</label>
        <input class="form-control" type="text" asp-for="Country" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    @*Description*@
    <div class="form-group">
        <label class="form-label" asp-for="Description">Une ptite description</label>
        <input class="form-control" type="text" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Ajouter</button>
</form>